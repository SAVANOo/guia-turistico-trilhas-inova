<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="shortcut icon" href="/src/bandeira-do-maranhao.ico" type="image/x-icon">
    <title>Detalhes do Destino</title>
    <style>
        .swiper-container {
            overflow: hidden;
            /* Evita problemas de rolagem */
        }
    </style>
</head>

<body class="bg-gray-100 text-gray-800">
    <header style="background: linear-gradient(to right,#c22529,#12558c, #049c45,#fbbc15, #f3911d);" class="p-4">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-4">
                <img src="/src/Bandeira_do_Maranhao.png" alt="Logo" class="h-10 w-auto">
                <h1 class="text-2xl font-bold text-white">Guia Turistico - Trilhas Inova</h1>
            </div>
            <nav>
                <a href="/" class="text-white hover:underline">Ver todos os destinos</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container mx-auto p-4 sm:p-6 lg:p-8 bg-white shadow-lg rounded-lg mt-10">
        <h1 class="text-3xl font-bold mb-4">
            <%= destino.cidade %>
        </h1>
        <div class="flex flex-col md:flex-row mb-4">
            <div class="flex-1 md:w-1/2 mb-4 md:mb-0">
                <img class="w-full h-auto rounded" src="<%= destino.urlFoto %>" alt="<%= destino.cidade %>">
            </div>
            <div class="flex-1 md:w-1/2 md:pl-4">
                <p class="mb-4"><strong>Descrição:</strong>
                    <%= destino.descricao %>
                </p>
                <div>
                    <strong>Mapa:</strong>
                    <iframe src="<%= destino.urlIframeGoogleMaps %>" width="100%" height="auto" style="border:0;"
                        allowfullscreen="" loading="lazy" class="rounded mt-2"></iframe>
                </div>
            </div>
        </div>

        <div class="swiper-container mt-6">
            <h2 class="text-xl font-semibold">
                Atrativos
            </h2>
            <div class="swiper-wrapper">
                <% atrativos.forEach(function(atrativo) { %>
                    <div class="swiper-slide flex-row items-center justify-center p-4 bg-white rounded shadow-md">
                        <img class="w-96 h-64 rounded" src="<%= atrativo.urlFoto %>" alt="<%= atrativo.titulo %>">
                        <h2 class="text-xl font-bold mb-2">
                            <%= atrativo.titulo %>
                        </h2>
                        <p><strong>Descrição:</strong>
                            <%= atrativo.descricao %>
                        </p>
                        <p><strong>Tipo:</strong>
                            <%= atrativo.tipo %>
                        </p>
                        <% if (atrativo.avaliacao) { %>
                            <p><strong>Avaliação:</strong>
                                <%= atrativo.avaliacao %>
                            </p>
                            <% } %>
                                <a href="/atrativo/show/<%= atrativo.id %>" class="text-blue-500 hover:underline">Ver
                                    Atrativo</a>
                    </div>
                    <% }); %>
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
            <!-- Add Navigation -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var swiper = new Swiper('.swiper-container', {
                slidesPerView: 1,
                spaceBetween: 10,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                breakpoints: {
                    640: {
                        slidesPerView: 1,
                        spaceBetween: 20,
                    },
                    768: {
                        slidesPerView: 2,
                        spaceBetween: 30,
                    },
                    1024: {
                        slidesPerView: 3,
                        spaceBetween: 40,
                    },
                },
            });
        });
    </script>
</body>

</html>
